# generated by ovirt-hosted-engine-setup
[connection]
id=hosted-engine
uuid={{ 99999999 | random | to_uuid }}
type=ethernet
autoconnect=true
zone=public

[ethernet]
mac-address={{ he_vm_mac_addr }}

[ipv4]
method=manual
address1={{ he_vm_ip_addr }}/{{ he_vm_ip_prefix }}
gateway={{ he_gateway }}
{% if he_dns_addr is string %}
{% set DNS_ADDR_LIST = he_dns_addr.split(',') %}
{% elif he_dns_addr is iterable %}
{% set DNS_ADDR_LIST = he_dns_addr %}
{% else %}
{% set DNS_ADDR_LIST = [] %}
{% endif %}
dns={{ DNS_ADDR_LIST | join(';') }};

[ipv6]
method=disabled
